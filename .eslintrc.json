{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-vars" : "warn",
    "space-infix-ops": "warn",
    "require-jsdoc":"off",
    "no-use-before-define": ["error", { 
        "functions": true, 
        "classes": true,
        "variables": true 
    }],
    "prefer-const": ["warn", {
        "ignoreReadBeforeAssign": true  
    }],
    "max-len": ["error", { 
        "ignorePattern": "^\\s*const\\s.+=\\s*require\\s*\\(",
        "ignoreUrls": true
    }]
  }
}
